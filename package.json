{
    "version": "1.0.0",
    "private": "true",
    "name": "bag",
    "description": "BAG PhoneGap application",
    "preferGlobal": "false",
    "license": "MIT",
    "devDependencies": {
        "app-root-path": "^1.0.0",
        "bower": "^1.6.5",
        "fs-extra": "^0.26.2",
        "http-server": "^0.8.5",
        "jasmine-core": "^2.3.4",
        "karma": "^0.13.15",
        "karma-chrome-launcher": "^0.2.1",
        "karma-firefox-launcher": "^0.1.7",
        "karma-jasmine": "^0.3.6",
        "karma-phantomjs-launcher": "^0.2.1",
        "karma-requirejs": "^0.2.2",
        "less": "^2.5.3",
        "phantomjs": "^1.9.19",
        "phonegap": "^5.4.1",
        "protractor": "^3.0.0",
        "requirejs": "^2.1.21",
        "shelljs": "^0.5.3",
        "tmp": "0.0.28"
    },
    "scripts": {
        "clean": "node ./resources/script/clean.js",
        "prebuild": "npm run less",
        "build": "node node_modules/requirejs/bin/r.js -o build.js",
        "buildlocal": "node node_modules/requirejs/bin/r.js -o buildlocal.js",
        "postinstall": "bower install && npm run setup && npm run buildlocal",
        "less": "lessc core/less/index.less core/css/index.css && lessc core/less/index.less www/css/index.css && lessc  core/less/index.less distributionlocal/css/index.css",
        "prestart": "npm install",
        "start": "http-server -a 0.0.0.0 -p 8001",
        "pretest": "npm install",
        "test": "node node_modules/karma/bin/karma start test/karma.conf.js",
        "test-single-run": "node node_modules/karma/bin/karma start test/karma.conf.js  --single-run",
        "preupdate-webdriver": "npm install",
        "update-webdriver": "webdriver-manager update",
        "phonegap": "npm install && npm run build && phonegap --verbose",
        "precordovaAndroid": "npm install",
        "cordovaAndroid": "npm run build && cordova platform add android && cordova build android && cordova run android",
        "precordovaIOS": "npm install",
        "cordovaIOS": "npm run build && cordova platform add ios && cordova build ios && cordova run ios --target=\"iPhone-4s\"",
        "precordovaBROWSER": "npm install",
        "cordovaBROWSER": "npm run build && cordova platform add browser && cordova build browser && cordova run browser",
        "preprotractor": "npm run update-webdriver",
        "protractor": "protractor test/protractor-conf.js",
        "setup": "npm run clean && npm run setup-directories",
        "setup-directories": "node ./resources/script/setup-directories.js",
        "update-index-async": "node -e \"require('shelljs/global'); sed('-i', /\\/\\/@@NG_LOADER_START@@[\\s\\S]*\\/\\/@@NG_LOADER_END@@/, '//@@NG_LOADER_START@@\\n' + cat('bower_components/angular-loader/angular-loader.min.js') + '\\n//@@NG_LOADER_END@@', 'core/index-async.html');\""
    }
}
